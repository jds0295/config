{
  "layer": "top",
  "position": "top",

  "modules-left": [
    "custom/startmenu",
    "hyprland/window",
    "mpris"
  ],
  "modules-center": [
    "network",
    "memory",
    "cpu",
    "hyprland/workspaces",
    "custom/gpu",
    "disk",
    "clock"
  ],
  "modules-right": [
    "tray",
    // "custom/connections",
    "custom/podman",
    "idle_inhibitor",
    "custom/temperature",
